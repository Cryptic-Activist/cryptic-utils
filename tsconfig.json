{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmit": false,
    "removeComments": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__/**/*", "node_modules"]
}
